@model List<UI_MVC.Models.Entities.Person>
@{
}

<div class="row">
    <h1 class="col-6">
        لیست پرسنل
    
    </h1>
    <div class="col-6">
        <a class="btn btn-primary" asp-controller="People" asp-action="Add">جدید</a>
    </div>
</div>

<table class="table table-hover w-100 mt-5">
    <tr>
        <td>شناسه</td>
        <td>نام</td>
        <td>نام خانوادگی</td>
        <td>موبایل</td>
        <td>شهر</td>
    </tr>
    @foreach (var person in @Model)
    {
        <tr>
            <td>@person.Id</td>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td>@person.PhoneNumber</td>
            <td>@person.CityName</td>
        </tr>
    }
</table>
